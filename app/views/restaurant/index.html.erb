
<section class="p-100" id="restaurante">
    <h2 class="titles text-center color-p01 p-25">Vamos a ayudarte a encontrar tu restaurante</h2>
    <div class="container text-center">
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
                
                <form>
                    <div class="color-p03" id="alertaseleccionrest"></div><br/>
                    <div class="form-group">
                        <label for="provincia">Provincia</label>
                        <select class="form-control" id="provincia">
                        	<option>Selecciona una provincia</option>
                        	<% @restaurantsprov.each do |c| %>
                        		<%= content_tag("option", c.provincia, class: c.provincia.gsub(' ','-')) %>
							<% end %>
                            
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="localidad">Localidad</label>
                        <select class="form-control" id="localidad">
                            <option>Selecciona una localidad</option>
                        	<% @restaurantsloc.each do |c| %>
                        		<%= content_tag("option", c.localidad, class: [c.provincia.gsub(' ','-'), c.localidad.gsub(' ','-')]) %>
							<% end %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="restnombre">Restaurantes</label>
                        <select class="form-control" id="restnombre">
                            <option>Selecciona un restaurante</option>
                        	<% @restaurantsname.each do |c| %>
                        		<%= content_tag("option", c.name, class: [c.provincia.gsub(' ','-'), c.localidad.gsub(' ','-'), c.name.gsub(' ','-')], value: c.id) %>
							<% end %>
                        </select>
                    </div>
                    <div class="btn button-p01 btn-lg text-uppercase" id="encontrar">encontrar</div>
                </form>
            </div>
        </div>
    </div>
</section>

