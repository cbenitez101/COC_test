
<section>
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center"><h1>Registro</h1></div>

        <div class="container text-center p-100 color-fa-p01">
          <%= form_tag session_path do  %>
            
            <div class="row">
              <div class="field">
                <div class="col-md-3 col-md-offset-3 text-right">
                  <%= label_tag :email %>
                </div>
                <div class="col-md-3 text-left">
                  <%= text_field_tag :email %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="field">
                <div class="col-md-3 col-md-offset-3 text-right">
                  <%= label_tag :password %>
                </div>
                <div class="col-md-3 text-left">
                  <%= password_field_tag :password %>
                  </div>
              </div>
            </div>
            
            <div class="row"
              <div class="actions">
                  <%= submit_tag 'login'%>
              </div>
            </div>
            <% end %>
        </div>
    
  </div>
</section>