
<section class="p-100 text-center">
    <i class="fa fa-map-marker fa-5x color-p05"></i>
    <h2 class="titles text-center color-p05 p-25">Primero busquemos un restaurante ...</h2>
    <div class="container text-center">
        <div class="row reserva">
            <div class="col-md-offset-4 col-md-4">
                <form>
                    <div class="color-p03" id="alertaseleccionrest"></div><br/>
                    <div class="form-group">
                        <label for="provincia">Provincia</label>
                        <select class="form-control" id="provincia">
                        	<option>Selecciona una provincia</option>
                        	<% @restaurantsprov.each do |c| %>
                        		<%= content_tag("option", c.provincia, class: c.provincia.gsub(' ','-')) %>
							<% end %>
                            
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="localidad">Localidad</label>
                        <select class="form-control" id="localidad">
                            <option>Selecciona una localidad</option>
                        	<% @restaurantsloc.each do |c| %>
                        		<%= content_tag("option", c.localidad, class: [c.provincia.gsub(' ','-'), c.localidad.gsub(' ','-')]) %>
							<% end %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="restnombre">Restaurantes</label>
                        <select class="form-control" id="restnombre">
                            <option>Selecciona un restaurante</option>
                        	<% @restaurantsname.each do |c| %>
                        		<%= content_tag("option", c.name, class: [c.provincia.gsub(' ','-'), c.localidad.gsub(' ','-'), c.name.gsub(' ','-')], value: c.id) %>
							<% end %>
                        </select>
                    </div>
                    <div class="btn button-p05 btn-lg text-uppercase" id="encontrar">encontrar</div>
                </form>
            </div>
        </div>
    </div>
    <div id="map">

    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBj0E4XyNuVPYsP88Cx5EtXd7pTlTnm90o">
    </script>
    <div id="datosrest"></div>
</section>

<section class="p-100 text-center">
    <i class="fa fa-clock-o fa-5x color-p04"></i>
    <h2 class="titles text-center color-p04 p-25">... ahora vamos con la reserva</h2>
    <div class="container text-center">
        <div class="row reserva">
            <div class="col-md-offset-4 col-md-4">
                <div id="errorreserva" class="color-p03"><h2 class="color-p03">No pueden haber campos vacios en la reserva</h2></div>
                <form>
                    <div class="form-group">
                        <label for="formcomensales">Comensales</label>
                        <input type="number" class="form-control" id="formcomensales" name="formrcomensales">
                    </div>

                    <div class="form-group">
                        <label for="formdate">Fecha</label>
                        <input type="text" class="form-control" id="formdate" name="formdate">
                    </div>

                    <div class="form-group">
                        <label for="formhora">Hora</label>
                        <input type="time" class="form-control" size="3" id="formhora" name="formhora"><br/>
                    </div>
                    <div class="btn button-p04 btn-lg text-uppercase" id="botonreserva">reservar</div>
                </form>
            </div>
        </div>
    </div>
</section>